-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get, id: "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings_selected == nil || @ratings_selected.has_key?(rating), id: "ratings_#{rating}"
  = submit_tag 'Refresh', id: "ratings_submit"
%table#movies
  %thead
    %tr
      %th{:class => ('hilite' if @sort_by.eql? "title")}
        %a{ :title => "title_header", :href => movies_path(:sort => :title)}
          Movie Title
      %th Rating
      %th{:class => ('hilite' if @sort_by.eql? "release_date")}
        %a{:title => "release_date_header", :href => movies_path(:sort => :release_date)}
          Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
